# ============= ОБОВ'ЯЗКОВІ ПАРАМЕТРИ =============

# Telegram Bot Token (отримайте від @BotFather)
# 1. Відкрийте Telegram, знайдіть @BotFather
# 2. Відправте /newbot
# 3. Скопіюйте токен сюди
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# ============= FERM API =============
# API для отримання каталогу товарів, акцій
FERM_API_URL=https://api.ferm.in.ua
FERM_API_KEY=your_ferm_api_key_here

# ============= БАЗА ДАНИХ =============
# SQLite (для розробки) - база буде створена автоматично
DATABASE_URL=sqlite+aiosqlite:///./ferm_bot.db

# PostgreSQL (для продакшену) - розкоментуйте і налаштуйте:
# DATABASE_URL=postgresql+asyncpg://ferm:password@localhost:5432/ferm_bot

# ============= REDIS (опціонально) =============
# Для кешування даних товарів та погоди
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# ============= ACCUWEATHER API (опціонально) =============
# Для функції АгроПогода
# Реєстрація: https://developer.accuweather.com/
ACCUWEATHER_API_KEY=your_accuweather_api_key

# ============= OPENAI API (опціонально) =============
# Для ШІ-консультацій та розрахунку норм
# Отримайте на: https://platform.openai.com/
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000

# ============= EMAIL (опціонально) =============
# Для відправки заявок на гранти та оренду техніки
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ADMIN_EMAIL=admin@ferm.in.ua

# ============= НАЛАШТУВАННЯ =============
DEBUG=True
LOG_LEVEL=INFO
MAX_CART_ITEMS=50
PRODUCTS_PER_PAGE=5

# ============= WEBHOOK (для продакшену) =============
# Залиште False для розробки (використовується polling)
WEBHOOK_ENABLED=False
# WEBHOOK_URL=https://yourdomain.com
# WEBHOOK_PATH=/webhook
# WEBAPP_HOST=0.0.0.0
# WEBAPP_PORT=8080